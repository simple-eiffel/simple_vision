{
  "name": "login_success",
  "version": "1.0.0",
  "description": "Test successful login flow with valid credentials",
  "tags": ["happy_path", "smoke"],
  "setup": {
    "window": "DEMO_LOGIN"
  },
  "steps": [
    {
      "step": 1,
      "action": "type",
      "target": "field_username",
      "value": "testuser"
    },
    {
      "step": 2,
      "action": "type",
      "target": "field_password",
      "value": "secret123"
    },
    {
      "step": 3,
      "action": "click",
      "target": "button_login"
    },
    {
      "step": 4,
      "action": "assert_text",
      "target": "label_status",
      "expected": "Logging in as testuser..."
    }
  ],
  "teardown": {
    "cleanup": "close_window"
  }
}
