{
  "name": "login_empty_password",
  "version": "1.0.0",
  "description": "Test login form validation when password is empty",
  "tags": ["validation", "smoke"],
  "setup": {
    "window": "DEMO_LOGIN"
  },
  "steps": [
    {
      "step": 1,
      "action": "type",
      "target": "field_username",
      "value": "testuser"
    },
    {
      "step": 2,
      "action": "click",
      "target": "button_login"
    },
    {
      "step": 3,
      "action": "assert_text",
      "target": "label_status",
      "expected": "Please enter password"
    }
  ],
  "teardown": {
    "cleanup": "close_window"
  }
}
